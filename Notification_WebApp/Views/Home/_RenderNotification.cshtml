@model  DAL.Notification
<div class="card">
    <h2 class="card-header">Send Notification</h2>



    <form class="form-horizontal card-body" method="post">
        <div class="form-group ">
            @*<input id="n-title" type="text" class="form-control" name="Title" value="" placeholder="Enter Notification Title">*@
            <div class="col-md-12">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", name = "Title", id = "n-title", type = "text", placeholder = "Enter Notification Title"} })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @*<textarea size="20" name="message" id="n-message" placeholder="Enter Notification message" style="height:120px;width:474px;position: static;"></textarea>*@
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Message,10,40, new { htmlAttributes = new { @class = "form-control", name = "message", id = "n-message", type = "text", placeholder = "Enter Notification message", style= "position: static;" }  })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.Recipents, new { htmlAttributes = new { @class = "form-control", name = "Recipents", id = "n-Recipents", type = "text", placeholder = "select Recipents" } })
                @Html.ValidationMessageFor(model => model.Recipents, "", new { @class = "text-danger" })
            </div>
            @*<input id="n-Recipents" type="text" class="form-control" name="Recipents" value="" placeholder="select Recipents">*@
            @*<select class="form-control" name="users1" id="user-lst1">

                    @foreach (var item in Model)
                    {
                        <option>@item.tbl_cust.Select(x=>x.UserName).ToString()</option>
                    }
                </select>*@
        </div>
        @*<button type="submit" class="btn btn-danger">Send</button>*@
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Save" class="btn btn-danger" />
        </div>
    </form>

</div>
